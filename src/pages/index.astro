---
import Layout from '../layouts/Layout.astro';
import Logo from "../components/Logo.astro";
import LinkListItem from "../components/LinkListItem.astro";
import BelluDevelopmentIcon from '../components/icons/BelluDevelopmentIcon.astro';
import DripDraftIcon from '../components/icons/DripDraftIcon.astro';
import BordsyIcon from '../components/icons/BordsyIcon.astro';
import XIcon from "../components/icons/XIcon.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import GitHubIcon from "../components/icons/GitHubIcon.astro";
import LinkListSocial from "../components/LinkListSocial.astro";
import PastProjectList from "../components/PastProjectsList.tsx";
import MailIcon from "../components/icons/MailIcon.astro";
import EmploymentListItem from "../components/EmploymentListItem.astro";
import SkillPillListItem from "../components/SkillPillListItem.astro";
---

<Layout title="Andrew Bellucci's Website">
	<header class="bg-white dark:bg-blue border-b dark:border-b-blue-light border-b-black/10">
		<div class="max-w-[1200px] mx-auto p-[30px]">
			<Logo />
			<h1 class="text-2xl font-bold text-blue-dark/80 dark:text-white/80 mt-[30px]">
				Heyo, my name is<br />
				<span class="font-extrabold text-[40px] leading-[48px] text-blue-dark dark:text-white">Andrew Bellucci</span>
			</h1>
		</div>
	</header>
	<main class="flex mx-auto p-[30px] gap-[30px] max-w-[1200px] flex-col-reverse lg:flex-row">
		<div class="flex-1">
			<section>
				<div class="flex items-start justify-start gap-6 relative">
					<div class="dark:bg-blue h-[30px] w-[30px] absolute -left-[15px] top-0 inline-flex items-center justify-center rounded-md bg-white border dark:border-blue-light">
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-briefcase"><rect width="20" height="14" x="2" y="7" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/></svg>
					</div>
					<div class="w-0.5 h-[50px] bg-black/10 dark:bg-blue-light" />
					<h2 class="font-bold relative top-1">Employment</h2>
				</div>
				<ul>
					<EmploymentListItem
						company="ServiceCore"
						timeline="8/2023 - 12/2023"
						position="Senior Software Engineer"
						bullets={[
							"Modernized outdated React.js + Node.js serverless architecture to speed up build times and meet best practices of the dashboard application",
							"Guided team on the significant overhaul of data loading infrastructure to improve performance",
							"Rebuilt outdated React Native application to allow for redeployment to respective app stores",
						]}
					/>
					<EmploymentListItem
						company="Promp"
						timeline="3/2023 - 07/2023"
						position="Co-Founder, Developer, & CEO"
						bullets={[
							"Built a user-friendly AI prompt marketplace that allows creatives to sell their prompts without giving away valuable information",
							"Worked with AWS, TypeScript, MySQL, React, Next.js, and Tailwind CSS to create a fast, scalable, and reliable platform",
							"Launched the platform and grew it to over 500+ daily active users in the first month",
						]}
					/>
					<EmploymentListItem
						company="Marble"
						timeline="7/2022 - 3/2023"
						position="Co-Founder, Developer, & COO"
						bullets={[
							"Worked with blockchain technologies to validate user identity and manage communities",
							"Managed and provided guidance to the team, as well as connected us with large partners",
							"Wireframe, Designed, and Developed intuitive and accessible User Interfaces for our infrastructure",
						]}
					/>
					<EmploymentListItem
						company="PureCars"
						timeline="1/2022 - 9/2022"
						position="Senior Frontend Engineer"
						bullets={[
							"Developed data-driven web application solutions with React.js for dealers all over the US",
							"Find and implement solutions to problems brought up by our users",
							"Design and develop extra features or functionalities to provide users with a great experience",
						]}
					/>
					<EmploymentListItem
						company="Xformics"
						timeline="8/2021 - 1/2022"
						position="Senior Consultant"
						bullets={[
							"Designed and developed custom software solutions ready for web-scale",
							"Led a team of developers to build full-stack web applications with React.js and Nest.js",
							"Used Angular 12 and Nest.js to create and maintain enterprise web apps",
						]}
					/>
					<EmploymentListItem
						company="Bellu Development"
						timeline="1/2015 - Present"
						position="Software Development & Design"
						bullets={[
							"Build custom software solutions suitable for small businesses or enterprise-level companies",
							"Design and build clean user interfaces/experiences with Figma, React.js, and Node.js",
							"Build seamless mobile applications with React Native",
							"Customer Relations and Networking",
						]}
					/>
				</ul>
			</section>
			<section>
				<div class="flex items-center justify-start gap-6 relative">
					<div class="dark:bg-blue h-[30px] w-[30px] absolute -left-[15px] top-1/2 -translate-y-1/2 inline-flex items-center justify-center rounded-md bg-white border dark:border-blue-light">
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-folder-open"><path d="m6 14 1.5-2.9A2 2 0 0 1 9.24 10H20a2 2 0 0 1 1.94 2.5l-1.54 6a2 2 0 0 1-1.95 1.5H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h3.9a2 2 0 0 1 1.69.9l.81 1.2a2 2 0 0 0 1.67.9H18a2 2 0 0 1 2 2v2"/></svg>
					</div>
					<div class="w-0.5 h-[100px] bg-gradient-to-b from-black/10 dark:from-blue-light via-black/10 dark:via-blue-light to-black/0 dark:to-blue-light/0" />
					<h2 class="font-bold">Past Projects</h2>
				</div>
				<PastProjectList client:load />
			</section>
		</div>
		<aside class="lg:max-w-[400px] w-full space-y-[30px]">
			<section>
				<h2 class="font-bold mb-2">Connect with me</h2>
				<ul class="flex items-center justify-start gap-4">
					<LinkListSocial Icon={XIcon} href="https://x.com/andrewbellucci" label="Link to Andrew's X/Twitter" />
					<LinkListSocial Icon={LinkedInIcon} href="https://linkedin.com/in/bellu" label="Link to Andrew's LinkedIn" />
					<LinkListSocial Icon={GitHubIcon} href="https://github.com/andrewbellucci" label="Link to Andrew's GitHub" />
					<LinkListSocial Icon={MailIcon} href="mailto:andrew@bellu.dev" label="Send an email to Andrew" />
				</ul>
			</section>
			<section>
				<h2 class="font-bold mb-2">Businesses</h2>
				<ul class="space-y-[15px]">
					<LinkListItem
						href="https://www.belludevelopment.com/"
						Icon={BelluDevelopmentIcon}
						title="Bellu Development"
						subTitle="Design & Development Agency"
					/>
					<LinkListItem
						href="https://www.bordsy.com/"
						Icon={BordsyIcon}
						title="Bordsy"
						subTitle="Amplify your Service Business"
						comingSoon
					/>
					<LinkListItem
						href="https://www.dripdraft.com/"
						Icon={DripDraftIcon}
						title="DripDraft"
						subTitle="Automate your Custom Apparel"
						comingSoon
					/>
				</ul>
			</section>
			<section>
				<h2 class="font-bold mb-2">Languages & Tools</h2>
				<ul>
					<SkillPillListItem>TypeScript</SkillPillListItem>
					<SkillPillListItem>Go</SkillPillListItem>
					<SkillPillListItem>Rust</SkillPillListItem>
					<SkillPillListItem>C#</SkillPillListItem>
					<SkillPillListItem>C++</SkillPillListItem>
					<SkillPillListItem>PHP</SkillPillListItem>
					<SkillPillListItem>MySQL</SkillPillListItem>
					<SkillPillListItem>PostgreSQL</SkillPillListItem>
					<SkillPillListItem>MongoDB</SkillPillListItem>
					<SkillPillListItem>React</SkillPillListItem>
					<SkillPillListItem>Angular</SkillPillListItem>
					<SkillPillListItem>Vue</SkillPillListItem>
					<SkillPillListItem>Next</SkillPillListItem>
					<SkillPillListItem>Svelte</SkillPillListItem>
					<SkillPillListItem>Redux</SkillPillListItem>
					<SkillPillListItem>React Native</SkillPillListItem>
					<SkillPillListItem>Electron</SkillPillListItem>
					<SkillPillListItem>Tauri</SkillPillListItem>
					<SkillPillListItem>Docker</SkillPillListItem>
					<SkillPillListItem>CI + CD</SkillPillListItem>
					<SkillPillListItem>TailwindCSS</SkillPillListItem>
					<SkillPillListItem>HTML</SkillPillListItem>
					<SkillPillListItem>CSS</SkillPillListItem>
					<SkillPillListItem>SASS</SkillPillListItem>
					<SkillPillListItem>CSS</SkillPillListItem>
					<SkillPillListItem>UI</SkillPillListItem>
					<SkillPillListItem>UX</SkillPillListItem>
					<SkillPillListItem>Figma</SkillPillListItem>
				</ul>
			</section>
		</aside>
	</main>
</Layout>
